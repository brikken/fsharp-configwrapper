{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "set date",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.0/IO.dll",
            "args": [
                "set",
                "date",
                "2019-01-01"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "set date (ignore)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.0/IO.dll",
            "args": [
                "set",
                "date",
                "2019-01-01",
                "ignore-existing",
                "true"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "set date (illegal)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.0/IO.dll",
            "args": [
                "set",
                "date",
                "${input:echoPrompt}"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "set date server (ignore)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.0/IO.dll",
            "args": [
                "set",
                "date",
                "2019-10-01",
                "server",
                "MyServer",
                "ignore-existing",
                "true"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": true,
            "console": "internalConsole"
        },
        {
            "name": "Show usage",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.0/IO.dll",
            "args": ["--help"],
            "cwd": "${workspaceFolder}/bin/Debug/netcoreapp3.0/",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Show usage --set",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.0/IO.dll",
            "args": ["set", "--help"],
            "cwd": "${workspaceFolder}/bin/Debug/netcoreapp3.0/",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ],
    "inputs": [
        {
            "id": "echoPrompt",
            "description": "Please enter a value",
            "default": "default echo text",
            "type": "promptString"
        }
    ]
}